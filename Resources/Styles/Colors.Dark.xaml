<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="UltimateVideoBrowser.Resources.Styles.ColorsDark">

    <!-- Dark theme palette with improved contrast for settings screens (Windows + Android). -->

    <!-- App background -->
    <Color x:Key="AppBg">#0B0D12</Color>

    <!-- Surfaces (cards/rows are clearly separated from AppBg) -->
    <Color x:Key="Surface">#182033</Color>
    <Color x:Key="Surface2">#1F2A42</Color>
    <Color x:Key="Surface3">#232F45</Color>
    <Color x:Key="SurfaceElevated">#243055</Color>

    <!-- Borders -->
    <Color x:Key="BorderSubtle">#33405B</Color>
    <Color x:Key="BorderStrong">#46567A</Color>

    <!-- Text -->
    <Color x:Key="OnSurface">#F2F5FF</Color>
    <Color x:Key="OnSurfaceMuted">#B2BDD2</Color>

    <!-- Accent -->
    <Color x:Key="Accent">#5B8CFF</Color>
    <Color x:Key="AccentStrong">#7B5CFF</Color>
    <Color x:Key="AccentGlow">#22325A</Color>
    <Color x:Key="AccentSoft">#2A3A64</Color>

    <!-- Shadows -->
    <Color x:Key="ShadowColor">#000000</Color>

    <!-- Text on accent surfaces -->
    <Color x:Key="OnAccent">#FFFFFF</Color>
</ResourceDictionary>
