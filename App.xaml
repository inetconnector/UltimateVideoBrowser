<?xml version="1.0" encoding="utf-8"?>

<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:UltimateVideoBrowser.Converters"
    xmlns:styles="clr-namespace:UltimateVideoBrowser.Resources.Styles"
    x:Class="UltimateVideoBrowser.App">

    <Application.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:StringNullOrEmptyToFallbackConverter x:Key="StringFallbackConverter" />
            <converters:StringEqualsMultiConverter x:Key="StringEqualsMultiConverter" />
            <converters:MediaTypeSelectedConverter x:Key="MediaTypeSelectedConverter" />
            <converters:SearchScopeSelectedConverter x:Key="SearchScopeSelectedConverter" />
            <converters:MediaTypeLabelConverter x:Key="MediaTypeLabelConverter" />
            <converters:TagNavigationContextConverter x:Key="TagNavigationContextConverter" />
            <converters:MediaTypeIsStillImageConverter x:Key="MediaTypeIsStillImageConverter" />
            <ResourceDictionary.MergedDictionaries>
                <styles:ColorsLight />
                <ResourceDictionary Source="Resources/Styles/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>