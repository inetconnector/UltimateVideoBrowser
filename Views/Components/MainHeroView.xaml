<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             x:Class="UltimateVideoBrowser.Views.Components.MainHeroView">
    <Grid Padding="20,14" BackgroundColor="{DynamicResource AppBg}">
        <Frame Style="{StaticResource HeroFrameStyle}">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{DynamicResource SurfaceElevated}" Offset="0.0" />
                    <GradientStop Color="{DynamicResource AccentGlow}" Offset="0.55" />
                    <GradientStop Color="{DynamicResource Surface3}" Offset="1.0" />
                </LinearGradientBrush>
            </Frame.Background>

            <Grid x:Name="HeroGrid"
                  ColumnDefinitions="*,Auto"
                  ColumnSpacing="16">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="HeroLayoutStates">
                        <VisualState x:Name="HeroPhone">
                            <VisualState.StateTriggers>
                                <OnIdiom x:TypeArguments="StateTriggerBase">
                                    <OnIdiom.Phone>
                                        <StateTrigger IsActive="True" />
                                    </OnIdiom.Phone>
                                    <OnIdiom.Default>
                                        <StateTrigger IsActive="False" />
                                    </OnIdiom.Default>
                                </OnIdiom>
                            </VisualState.StateTriggers>
                            <VisualState.Setters>
                                <Setter TargetName="HeroGrid" Property="ColumnDefinitions" Value="*" />
                                <Setter TargetName="HeroGrid" Property="RowDefinitions" Value="Auto,Auto" />
                                <Setter TargetName="HeroGrid" Property="ColumnSpacing" Value="0" />
                                <Setter TargetName="HeroImage" Property="Grid.Row" Value="0" />
                                <Setter TargetName="HeroImage" Property="Grid.Column" Value="0" />
                                <Setter TargetName="HeroImage" Property="HorizontalOptions" Value="Center" />
                                <Setter TargetName="HeroContent" Property="Grid.Row" Value="1" />
                                <Setter TargetName="HeroContent" Property="Grid.Column" Value="0" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

                <VerticalStackLayout x:Name="HeroContent"
                                     Spacing="10">
                    <Label Text="{x:Static strings:AppResources.HeroEyebrow}"
                           FontSize="12"
                           TextColor="{DynamicResource OnSurfaceMuted}" />
                    <Label Text="{x:Static strings:AppResources.HeroTitle}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource OnSurface}" />
                    <Label Text="{x:Static strings:AppResources.HeroSubtitle}"
                           FontSize="14"
                           TextColor="{DynamicResource OnSurfaceMuted}" />

                    <Button x:Name="ActionsButton"
                            Text="{x:Static strings:AppResources.ActionsButton}"
                            FontAttributes="Bold"
                            Padding="18,10"
                            Clicked="OnActionsClicked" />
                </VerticalStackLayout>

                <Image x:Name="HeroImage"
                       Grid.Column="1"
                       Source="hero_video.svg"
                       HeightRequest="128"
                       WidthRequest="148"
                       HorizontalOptions="End"
                       VerticalOptions="Center" />
            </Grid>
        </Frame>
    </Grid>
</ContentView>
