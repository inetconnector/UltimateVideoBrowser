<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:UltimateVideoBrowser.Models;assembly=UltimateVideoBrowser"
             xmlns:helpers="clr-namespace:UltimateVideoBrowser.Helpers;assembly=UltimateVideoBrowser"
             x:Class="UltimateVideoBrowser.Views.Components.MainTimelineSidebarView"
             WidthRequest="120"
             MinimumWidthRequest="120">
    <Grid RowDefinitions="Auto,*"
          RowSpacing="8">
        <VerticalStackLayout Grid.Row="0"
                             Spacing="6"
                             HorizontalOptions="FillAndExpand"
                             Margin="8,8,8,0">
            <!-- Settings shortcut (requested: above scroll buttons) -->
            <Button Text="⚙"
                    FontSize="14"
                    FontAttributes="Bold"
                    HeightRequest="32"
                    Padding="0"
                    HorizontalOptions="FillAndExpand"
                    Style="{StaticResource OverlayButtonStyle}"
                    Clicked="OnSettingsClicked"
                    AutomationProperties.Name="Open settings" />

            <Label Text="Timeline"
                   FontSize="10"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource OnSurfaceMuted}"
                   HorizontalTextAlignment="Center" />
            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="Auto,Auto"
                  ColumnSpacing="6"
                  RowSpacing="6">
                <Button Text="⇞"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="28"
                        Padding="0"
                        Style="{StaticResource OverlayButtonStyle}"
                        Clicked="OnTimelineScrollTopClicked"
                        AutomationProperties.Name="Scroll timeline to top" />
                <Button Text="▲"
                        Grid.Column="1"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="28"
                        Padding="0"
                        Style="{StaticResource OverlayButtonStyle}"
                        Clicked="OnTimelineScrollUpClicked"
                        AutomationProperties.Name="Scroll timeline up" />
                <Button Text="▼"
                        Grid.Row="1"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="28"
                        Padding="0"
                        Style="{StaticResource OverlayButtonStyle}"
                        Clicked="OnTimelineScrollDownClicked"
                        AutomationProperties.Name="Scroll timeline down" />
                <Button Text="⇟"
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="28"
                        Padding="0"
                        Style="{StaticResource OverlayButtonStyle}"
                        Clicked="OnTimelineScrollBottomClicked"
                        AutomationProperties.Name="Scroll timeline to bottom" />
            </Grid>

            <Label Text="Media"
                   FontSize="10"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource OnSurfaceMuted}"
                   HorizontalTextAlignment="Center" />
            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="Auto,Auto"
                  ColumnSpacing="6"
                  RowSpacing="6">
                <Button Text="⇞"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="28"
                        Padding="0"
                        Style="{StaticResource OverlayButtonStyle}"
                        Clicked="OnMediaScrollTopClicked"
                        AutomationProperties.Name="Scroll media to top" />
                <Button Text="▲"
                        Grid.Column="1"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="28"
                        Padding="0"
                        Style="{StaticResource OverlayButtonStyle}"
                        Clicked="OnMediaScrollUpClicked"
                        AutomationProperties.Name="Scroll media up" />
                <Button Text="▼"
                        Grid.Row="1"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="28"
                        Padding="0"
                        Style="{StaticResource OverlayButtonStyle}"
                        Clicked="OnMediaScrollDownClicked"
                        AutomationProperties.Name="Scroll media down" />
                <Button Text="⇟"
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="12"
                        FontAttributes="Bold"
                        HeightRequest="28"
                        Padding="0"
                        Style="{StaticResource OverlayButtonStyle}"
                        Clicked="OnMediaScrollBottomClicked"
                        AutomationProperties.Name="Scroll media to bottom" />
            </Grid>
        </VerticalStackLayout>

        <CollectionView ItemsSource="{Binding TimelineEntries}"
                        x:Name="TimelineCollection"
                        SelectionMode="Single"
                        SelectionChanged="OnTimelineSelectionChanged"
                        BackgroundColor="{DynamicResource AppBg}"
                        VerticalScrollBarVisibility="Always"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand"
                        Margin="8,0,8,0"
                        Grid.Row="1"
                        ItemSizingStrategy="MeasureFirstItem">
            <CollectionView.Header>
                <Grid HeightRequest="{Binding HeaderHeight}" />
            </CollectionView.Header>

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:TimelineEntry">
                    <Grid ColumnDefinitions="14,*" Padding="4,6">
                        <BoxView WidthRequest="2"
                                 BackgroundColor="{DynamicResource BorderSubtle}"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Fill" />
                        <Frame Grid.Column="1"
                               Padding="6"
                               CornerRadius="14"
                               BackgroundColor="{DynamicResource SurfaceElevated}"
                               BorderColor="{DynamicResource BorderSubtle}">
                            <Grid RowDefinitions="70,Auto" RowSpacing="6">
                                <Grid BackgroundColor="{DynamicResource Surface3}"
                                      HeightRequest="70">
                                    <Image
                                        Source="{Binding ThumbnailPath, Converter={StaticResource StringFallbackConverter}, ConverterParameter=video_placeholder.svg}"
                                        Aspect="AspectFill"
                                        helpers:Tooltip.Text="{Binding PeopleTagsSummary}" />
                                </Grid>
                                <VerticalStackLayout Grid.Row="1" Spacing="2">
                                    <Label Text="{Binding MonthLabel}"
                                           FontAttributes="Bold"
                                           FontSize="12"
                                           TextColor="{DynamicResource OnSurface}" />
                                    <Label Text="{Binding YearLabel}"
                                           FontSize="10"
                                           TextColor="{DynamicResource OnSurfaceMuted}"
                                           IsVisible="True" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
