<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             xmlns:models="clr-namespace:UltimateVideoBrowser.Models"
             x:Class="UltimateVideoBrowser.Views.Components.MainAlbumsTabsView">
    <Grid Padding="12,0,12,12"
          BackgroundColor="{DynamicResource AppBg}"
          RowDefinitions="Auto,Auto"
          RowSpacing="8">
        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
            <Label Text="{x:Static strings:AppResources.AlbumsHeader}"
                   FontAttributes="Bold"
                   FontSize="13"
                   TextColor="{DynamicResource OnSurface}" />
            <HorizontalStackLayout Grid.Column="1"
                                   Spacing="8">
                <Button Text="{x:Static strings:AppResources.ManageAlbumsButton}"
                        Command="{Binding OpenAlbumsCommand}" />
                <Button Text="{x:Static strings:AppResources.MapButton}"
                        Command="{Binding OpenMapCommand}"
                        IsVisible="{Binding IsLocationEnabled}" />
            </HorizontalStackLayout>
        </Grid>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding AlbumTabs}"
                        SelectionMode="None"
                        HorizontalScrollBarVisibility="Never">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="8" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AlbumListItem">
                    <Frame BackgroundColor="{DynamicResource Surface2}"
                           BorderColor="{DynamicResource BorderSubtle}"
                           CornerRadius="12"
                           Padding="12,6"
                           HasShadow="False">
                        <Frame.Triggers>
                            <DataTrigger TargetType="Frame" Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource StringEqualsMultiConverter}">
                                        <Binding Path="Id" />
                                        <Binding Path="BindingContext.ActiveAlbumId"
                                                 Source="{RelativeSource AncestorType={x:Type ContentPage}}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter Property="BackgroundColor" Value="{DynamicResource Accent}" />
                                <Setter Property="BorderColor" Value="{DynamicResource Accent}" />
                            </DataTrigger>
                        </Frame.Triggers>
                        <Label Text="{Binding Name}"
                               FontSize="12"
                               TextColor="{DynamicResource OnSurface}">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Value="True">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource StringEqualsMultiConverter}">
                                            <Binding Path="Id" />
                                            <Binding Path="BindingContext.ActiveAlbumId"
                                                     Source="{RelativeSource AncestorType={x:Type ContentPage}}" />
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <Setter Property="TextColor" Value="{DynamicResource OnAccent}" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding BindingContext.SelectAlbumCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>