<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             x:Class="UltimateVideoBrowser.Views.Components.MainAlbumsTabsView">
    <Grid Padding="12,0,12,12"
          BackgroundColor="{DynamicResource AppBg}"
          RowDefinitions="Auto,Auto"
          RowSpacing="8">
        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
            <Label Text="{x:Static strings:AppResources.AlbumsHeader}"
                   FontAttributes="Bold"
                   FontSize="13"
                   TextColor="{DynamicResource OnSurface}" />
            <Button x:Name="ActionsButton"
                    Grid.Column="1"
                    Text="{x:Static strings:AppResources.ActionsButton}"
                    Clicked="OnActionsClicked">
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="{x:Static strings:AppResources.ManageAlbumsButton}"
                                        Command="{Binding OpenAlbumsCommand}" />
                        <MenuFlyoutItem Text="{x:Static strings:AppResources.MapButton}"
                                        Command="{Binding OpenMapCommand}"
                                        IsVisible="{Binding IsLocationEnabled}" />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>
            </Button>
        </Grid>

        <Picker Grid.Row="1"
                ItemsSource="{Binding AlbumTabs}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedAlbum}"
                Title="{x:Static strings:AppResources.AlbumsHeader}"
                BackgroundColor="{DynamicResource Surface2}"
                TextColor="{DynamicResource OnSurface}" />
    </Grid>
</ContentView>
