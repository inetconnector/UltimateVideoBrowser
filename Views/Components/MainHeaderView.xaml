<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             x:Class="UltimateVideoBrowser.Views.Components.MainHeaderView">
    <Grid Padding="20,16"
          ColumnDefinitions="*,Auto"
          BackgroundColor="{DynamicResource AppBg}">
        <HorizontalStackLayout Grid.Column="0"
                               Spacing="12"
                               VerticalOptions="Center">
            <Frame Style="{StaticResource IconBadgeStyle}"
                   HeightRequest="40"
                   WidthRequest="40"
                   HorizontalOptions="Start">
                <Image Source="app_logo.svg"
                       HeightRequest="24"
                       WidthRequest="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <VerticalStackLayout Spacing="2">
                <Label Text="{x:Static strings:AppResources.AppTitle}"
                       FontAttributes="Bold"
                       FontSize="19"
                       TextColor="{DynamicResource OnSurface}" />
                <Label Text="{x:Static strings:AppResources.MainPageTitle}"
                       FontSize="12"
                       TextColor="{DynamicResource OnSurfaceMuted}" />
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <HorizontalStackLayout Grid.Column="1"
                               Spacing="10"
                               VerticalOptions="Center"
                               HorizontalOptions="End">
            <Button Text="âš™"
                    FontSize="14"
                    FontAttributes="Bold"
                    HeightRequest="32"
                    MinimumWidthRequest="{OnPlatform Android=64, Default=0}"
                    Padding="0"
                    HorizontalOptions="End"
                    Style="{StaticResource OverlayButtonStyle}"
                    Command="{Binding OpenSettingsCommand}"
                    IsVisible="{OnIdiom Phone=True, Default=False}"
                    AutomationProperties.Name="Open settings" />
            <ActivityIndicator IsVisible="{Binding IsTopBusy}"
                               IsRunning="{Binding IsTopBusy}"
                               WidthRequest="22"
                               HeightRequest="22"
                               VerticalOptions="Center"
                               HorizontalOptions="End" />
        </HorizontalStackLayout>
    </Grid>
</ContentView>
