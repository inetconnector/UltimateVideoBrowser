<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             x:Class="UltimateVideoBrowser.Views.Components.MainIndexingBannerView">
    <Frame IsVisible="{Binding ShowIndexingBanner}"
           BackgroundColor="{DynamicResource Surface}"
           CornerRadius="12"
           BorderColor="{DynamicResource BorderSubtle}"
           Padding="12"
           HorizontalOptions="Center"
           VerticalOptions="Start"
           Margin="16,4,16,12"
           HasShadow="False">
        <Grid ColumnDefinitions="*,Auto,Auto"
              RowDefinitions="Auto,Auto"
              ColumnSpacing="12"
              RowSpacing="4">
            <Label Text="{Binding IndexBannerTitle}"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource OnSurface}" />
            <Label Grid.Row="1"
                   Text="{Binding IndexBannerMessage}"
                   FontSize="12"
                   TextColor="{DynamicResource OnSurfaceMuted}" />
            <Button Grid.Column="1"
                    Grid.RowSpan="2"
                    Text="{Binding IndexBannerActionText}"
                    Command="{Binding IndexBannerActionCommand}"
                    IsVisible="{Binding ShowIndexBannerAction}"
                    Style="{StaticResource OverlayButtonStyle}"
                    Padding="12,8"
                    CornerRadius="12" />
            <Button Grid.Column="2"
                    Grid.RowSpan="2"
                    Text="{x:Static strings:AppResources.RefreshButton}"
                    Command="{Binding RefreshIndexCommand}"
                    IsVisible="{Binding ShowIndexRefreshAction}"
                    IsEnabled="{Binding IsIndexRefreshPending}"
                    Style="{StaticResource OverlayButtonStyle}"
                    Padding="12,8"
                    CornerRadius="12" />
        </Grid>
    </Frame>
</ContentView>
