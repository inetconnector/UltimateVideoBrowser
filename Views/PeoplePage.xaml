<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             x:Class="UltimateVideoBrowser.Views.PeoplePage"
             BackgroundColor="{DynamicResource AppBg}"
             Title="{x:Static strings:AppResources.PeoplePageTitle}">

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="{OnPlatform Android='12,32,12,12', iOS='12,24,12,12', Default='12'}"
          RowSpacing="12">

        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
            <Button Text="{x:Static strings:AppResources.BackButton}"
                    Clicked="OnBackClicked" />

            <Label Grid.Column="1"
                   Text="{x:Static strings:AppResources.PeoplePageHeader}"
                   TextColor="{DynamicResource OnSurface}"
                   FontAttributes="Bold"
                   FontSize="16"
                   VerticalTextAlignment="Center" />

            <Grid Grid.Column="2" ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="10"
                  VerticalOptions="Center">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   WidthRequest="16"
                                   HeightRequest="16" />
                <Button Grid.Column="1"
                        Text="{x:Static strings:AppResources.TaggedPhotosButton}"
                        Clicked="OnTaggedPhotosClicked" />
                <Button Grid.Column="2"
                        Text="{x:Static strings:AppResources.RefreshButton}"
                        Command="{Binding RefreshCommand}" />
            </Grid>
        </Grid>

        <SearchBar Grid.Row="1"
                   Text="{Binding SearchText}"
                   Placeholder="{x:Static strings:AppResources.PeopleSearchPlaceholder}" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding People}"
                        SelectionMode="Single"
                        SelectionChanged="OnPersonSelected">
            <CollectionView.EmptyView>
                <Grid Padding="20" RowDefinitions="Auto,Auto" RowSpacing="10">
                    <Image Source="empty_state.svg" HeightRequest="110" />
                    <Label Grid.Row="1"
                           Text="{x:Static strings:AppResources.PeopleEmptyHint}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="12"
                           HorizontalTextAlignment="Center" />
                </Grid>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{DynamicResource Surface}"
                           CornerRadius="14"
                           HasShadow="False"
                           Padding="12"
                           Margin="0,0,0,10">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                            <Frame BackgroundColor="{DynamicResource Surface2}"
                                   CornerRadius="999"
                                   WidthRequest="56"
                                   HeightRequest="56"
                                   Padding="0"
                                   HasShadow="False">
                                <Image
                                    Source="{Binding CoverThumbnailPath, Converter={StaticResource StringFallbackConverter}, ConverterParameter=person_placeholder.svg}"
                                    Aspect="AspectFill" />
                            </Frame>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="{Binding Name}"
                                       TextColor="{DynamicResource OnSurface}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding PhotoCountText}"
                                       TextColor="{DynamicResource OnSurfaceMuted}"
                                       FontSize="12" />
                            </VerticalStackLayout>

                            <Label Grid.Column="2"
                                   Text="â€º"
                                   TextColor="{DynamicResource OnSurfaceMuted}"
                                   FontSize="18"
                                   VerticalTextAlignment="Center"
                                   HorizontalTextAlignment="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>