<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             x:Class="UltimateVideoBrowser.Views.AboutPage"
             BackgroundColor="{DynamicResource AppBg}"
             Title="{x:Static strings:AppResources.AboutTitle}">

    <Grid RowDefinitions="Auto,*"
          Padding="{OnPlatform Android='12,32,12,12', iOS='12,24,12,12', Default='12'}">
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
            <Button x:Name="BackButton"
                    Text="{x:Static strings:AppResources.BackButton}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static strings:AppResources.AboutTitle}"
                   TextColor="{DynamicResource OnSurface}"
                   FontAttributes="Bold"
                   FontSize="16" />
        </Grid>

        <ScrollView Grid.Row="1" Margin="0,12,0,0">
            <VerticalStackLayout Spacing="12">
                <Frame BackgroundColor="{DynamicResource Surface}"
                       CornerRadius="14"
                       Padding="14">
                    <VerticalStackLayout Spacing="8">
                        <Label x:Name="AppNameLabel"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource OnSurface}" />
                        <Label x:Name="AppVersionLabel"
                               FontSize="12"
                               TextColor="{DynamicResource OnSurfaceMuted}" />
                        <Label x:Name="LicenseStatusLabel"
                               FontSize="12"
                               TextColor="{DynamicResource OnSurfaceMuted}" />
                        <Label Text="{x:Static strings:AppResources.AboutDescription}"
                               FontSize="12"
                               TextColor="{DynamicResource OnSurfaceMuted}" />
                        <Button Text="{x:Static strings:AppResources.AboutLicensesButton}"
                                Clicked="OnLicensesClicked"
                                Style="{StaticResource OverlayButtonStyle}"
                                CornerRadius="6"
                                HorizontalOptions="Start"
                                Padding="12,6" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
