<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             x:Class="UltimateVideoBrowser.Views.SourcesPage"
             BackgroundColor="{DynamicResource AppBg}"
             Title="{x:Static strings:AppResources.SourcesPageTitle}">

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="{OnPlatform Android='12,32,12,12', iOS='12,24,12,12', Default='12'}">
        <VerticalStackLayout Spacing="8">
            <Grid ColumnDefinitions="Auto,*"
                  ColumnSpacing="12">
                <Button Text="{x:Static strings:AppResources.BackButton}"
                        Clicked="OnBackClicked" />
                <Label Grid.Column="1"
                       Text="{x:Static strings:AppResources.SourcesPageHeader}"
                       TextColor="{DynamicResource OnSurface}"
                       FontAttributes="Bold"
                       FontSize="16" />
            </Grid>
            <Button Text="{x:Static strings:AppResources.AddSourceButton}"
                    HorizontalOptions="End"
                    Command="{Binding AddSourceCommand}"
                    IsVisible="{Binding SupportsManualPath, Converter={StaticResource InverseBoolConverter}}" />
        </VerticalStackLayout>

        <Grid Grid.Row="1"
              Padding="0,10,0,0"
              RowDefinitions="Auto,Auto"
              RowSpacing="10">
            <Frame BackgroundColor="{DynamicResource Surface}"
                   CornerRadius="12"
                   Padding="12"
                   HasShadow="False"
                   IsVisible="{Binding HasMediaPermission, Converter={StaticResource InverseBoolConverter}}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{x:Static strings:AppResources.PermissionTitle}"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource OnSurface}" />
                        <Label Text="{x:Static strings:AppResources.PermissionMessage}"
                               TextColor="{DynamicResource OnSurfaceMuted}"
                               FontSize="12" />
                    </VerticalStackLayout>
                    <Button Grid.Column="1"
                            Text="{x:Static strings:AppResources.PermissionOk}"
                            Command="{Binding RequestPermissionCommand}" />
                </Grid>
            </Frame>

            <Frame Grid.Row="1"
                   BackgroundColor="{DynamicResource Surface}"
                   CornerRadius="12"
                   Padding="12"
                   HasShadow="False"
                   IsVisible="{Binding SupportsManualPath}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <Label Text="{x:Static strings:AppResources.AddPathHelper}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="12" />
                    <Button Grid.Column="1"
                            Text="{x:Static strings:AppResources.AddPathButton}"
                            Command="{Binding AddPathCommand}" />
                </Grid>
            </Frame>
        </Grid>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Sources}"
                        SelectionMode="None"
                        Margin="0,12,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{DynamicResource Surface}"
                           CornerRadius="14"
                           HasShadow="False"
                           Padding="12"
                           Margin="0,0,0,10">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="{Binding DisplayName}"
                                   TextColor="{DynamicResource OnSurface}"
                                   FontAttributes="Bold" />
                            <Label Grid.Row="1"
                                   Text="{Binding DisplayPath}"
                                   TextColor="{DynamicResource OnSurfaceMuted}"
                                   FontSize="12"
                                   LineBreakMode="TailTruncation" />

                            <HorizontalStackLayout Grid.Column="1"
                                                   Spacing="8"
                                                   HorizontalOptions="End">
                                <Button
                                    Text="{Binding IsEnabled, Converter={StaticResource BoolToEnabledTextConverter}}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleCommand}"
                                    CommandParameter="{Binding .}" />
                                <Button Text="âœ•"
                                        AutomationProperties.Name="{x:Static strings:AppResources.RemoveSourceButton}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveCommand}"
                                        CommandParameter="{Binding .}"
                                        IsVisible="{Binding IsSystemSource, Converter={StaticResource InverseBoolConverter}}" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
