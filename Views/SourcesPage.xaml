<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             x:Class="UltimateVideoBrowser.Views.SourcesPage"
             BackgroundColor="{DynamicResource AppBg}"
             Title="{x:Static strings:AppResources.SourcesPageTitle}">

    <Grid RowDefinitions="Auto,*" Padding="12">
        <Label Text="{x:Static strings:AppResources.SourcesPageHeader}"
               TextColor="{DynamicResource OnSurface}"
               FontAttributes="Bold"
               FontSize="16" />

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Sources}"
                        SelectionMode="None"
                        Margin="0,12,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{DynamicResource Surface}"
                           CornerRadius="14"
                           HasShadow="False"
                           Padding="12"
                           Margin="0,0,0,10">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="{Binding DisplayName}"
                                   TextColor="{DynamicResource OnSurface}"
                                   FontAttributes="Bold" />
                            <Label Grid.Row="1"
                                   Text="{Binding LocalFolderPath}"
                                   TextColor="{DynamicResource OnSurfaceMuted}"
                                   FontSize="12"
                                   LineBreakMode="TailTruncation" />

                            <Button Grid.Column="1"
                                    Text="{Binding IsEnabled, Converter={StaticResource BoolToEnabledTextConverter}}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="{DynamicResource Surface2}"
                                    TextColor="{DynamicResource OnSurface}"
                                    CornerRadius="12"
                                    Padding="12,8" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
