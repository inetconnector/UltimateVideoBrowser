<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             xmlns:models="clr-namespace:UltimateVideoBrowser.Models"
             x:Class="UltimateVideoBrowser.Views.AlbumsPage"
             BackgroundColor="{DynamicResource AppBg}"
             Title="{x:Static strings:AppResources.AlbumsPageTitle}">

    <Grid RowDefinitions="Auto,*"
          Padding="{OnPlatform Android='12,32,12,12', iOS='12,24,12,12', Default='12'}">
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
            <Button Text="{x:Static strings:AppResources.BackButton}"
                    Clicked="OnBackClicked" />
            <Label Grid.Column="1"
                   Text="{x:Static strings:AppResources.AlbumsPageHeader}"
                   TextColor="{DynamicResource OnSurface}"
                   FontAttributes="Bold"
                   FontSize="16" />
            <Button Grid.Column="2"
                    Text="{x:Static strings:AppResources.AddAlbumButton}"
                    Command="{Binding AddAlbumCommand}" />
        </Grid>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Albums}"
                        SelectionMode="None"
                        Margin="0,12,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AlbumListItem">
                    <Frame BackgroundColor="{DynamicResource Surface}"
                           CornerRadius="14"
                           HasShadow="False"
                           Padding="12"
                           Margin="0,0,0,10">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="{Binding Name}"
                                   TextColor="{DynamicResource OnSurface}"
                                   FontAttributes="Bold" />
                            <Label Grid.Row="1"
                                   Text="{Binding ItemCount, StringFormat={x:Static strings:AppResources.AlbumItemCountFormat}}"
                                   TextColor="{DynamicResource OnSurfaceMuted}"
                                   FontSize="12" />

                            <HorizontalStackLayout Grid.Column="1"
                                                   Spacing="8"
                                                   HorizontalOptions="End">
                                <Button Text="{x:Static strings:AppResources.RenameAlbumAction}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RenameAlbumCommand}"
                                        CommandParameter="{Binding .}" />
                                <Button Text="{x:Static strings:AppResources.DeleteAlbumAction}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteAlbumCommand}"
                                        CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>