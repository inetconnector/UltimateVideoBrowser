<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             xmlns:models="clr-namespace:UltimateVideoBrowser.Models"
             xmlns:components="clr-namespace:UltimateVideoBrowser.Views.Components"
             x:Class="UltimateVideoBrowser.Views.PersonPage"
             BackgroundColor="{DynamicResource AppBg}"
             Title="{x:Static strings:AppResources.PersonPageTitle}">

    <Grid RowDefinitions="Auto,Auto,Auto,*"
          Padding="{OnPlatform Android='12,32,12,12', iOS='12,24,12,12', Default='12'}"
          RowSpacing="12">

        <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
            <Button Text="{x:Static strings:AppResources.BackButton}"
                    Clicked="OnBackClicked" />

            <Label Grid.Column="1"
                   Text="{Binding Name}"
                   TextColor="{DynamicResource OnSurface}"
                   FontAttributes="Bold"
                   FontSize="16"
                   VerticalTextAlignment="Center" />

            <Grid Grid.Column="2" ColumnDefinitions="Auto,Auto" ColumnSpacing="10"
                  VerticalOptions="Center">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   WidthRequest="16"
                                   HeightRequest="16" />
                <Button Grid.Column="1"
                        Text="{x:Static strings:AppResources.SaveButton}"
                        Command="{Binding SaveNameCommand}" />
                <Button Grid.Column="2"
                        Text="{x:Static strings:AppResources.MergeButton}"
                        Clicked="OnMergeClicked" />
            </Grid>
        </Grid>

        <Frame Grid.Row="1"
               BackgroundColor="{DynamicResource Surface}"
               CornerRadius="12"
               HasShadow="False"
               Padding="12">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="12">
                <Entry Text="{Binding Name}"
                       Placeholder="{x:Static strings:AppResources.PersonNamePlaceholder}"
                       TextColor="{DynamicResource OnSurface}"
                       PlaceholderColor="{DynamicResource OnSurfaceMuted}" />
                <Label Grid.Column="1"
                       Text="{x:Static strings:AppResources.QualityLabel}"
                       FontSize="12"
                       TextColor="{DynamicResource OnSurfaceMuted}" />
                <Label Grid.Column="2"
                       Text="{Binding QualityScore, StringFormat='{0:0.00}'}"
                       FontSize="12"
                       TextColor="{DynamicResource OnSurfaceMuted}" />
                <Button Grid.Column="3"
                        Text="{x:Static strings:AppResources.RenameAction}"
                        Command="{Binding SaveNameCommand}" />
            </Grid>
        </Frame>

        <Frame Grid.Row="2"
               BackgroundColor="{DynamicResource Surface}"
               CornerRadius="12"
               HasShadow="False"
               Padding="12">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <VerticalStackLayout Spacing="4">
                    <Label Text="{x:Static strings:AppResources.IgnorePersonTitle}"
                           TextColor="{DynamicResource OnSurface}"
                           FontAttributes="Bold"
                           FontSize="13" />
                    <Label Text="{x:Static strings:AppResources.IgnorePersonDescription}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="11" />
                    <Label Text="{x:Static strings:AppResources.IgnoredPersonBadge}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="11"
                           IsVisible="{Binding IsIgnored}" />
                </VerticalStackLayout>
                <Button Grid.Column="1"
                        Text="{Binding IgnoreActionText}"
                        Command="{Binding ToggleIgnoreCommand}" />
            </Grid>
        </Frame>

        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding Photos}"
                        SelectionMode="Single"
                        SelectionChanged="OnPhotoSelected"
                        ItemSizingStrategy="MeasureFirstItem"
                        ItemsUpdatingScrollMode="KeepScrollOffset"
                        VerticalScrollBarVisibility="Always"
                        x:Name="PersonMediaItemsView">
            <CollectionView.EmptyView>
                <Grid Padding="20" RowDefinitions="Auto,Auto" RowSpacing="10">
                    <Image Source="empty_state.svg" HeightRequest="110" />
                    <Label Grid.Row="1"
                           Text="{x:Static strings:AppResources.PersonEmptyHint}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="12"
                           HorizontalTextAlignment="Center" />
                </Grid>
            </CollectionView.EmptyView>

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="3"
                                 x:Name="PersonGridLayout" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MediaItem">
                    <Frame BackgroundColor="{DynamicResource Surface}"
                           CornerRadius="16"
                           Margin="8"
                           Padding="0"
                           BorderColor="{DynamicResource BorderSubtle}"
                           MinimumWidthRequest="240"
                           MinimumHeightRequest="280">
                        <Frame.Triggers>
                            <DataTrigger TargetType="Frame"
                                         Binding="{Binding IsMarked}"
                                         Value="True">
                                <Setter Property="BorderColor"
                                        Value="{DynamicResource Accent}" />
                                <Setter Property="BackgroundColor"
                                        Value="{DynamicResource Surface2}" />
                            </DataTrigger>
                        </Frame.Triggers>
                        <Grid RowDefinitions="170,Auto,Auto,Auto"
                              Padding="10">
                            <components:MediaItemPreviewView HeightRequest="170" />

                            <Grid Grid.Row="1"
                                  RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="Auto,*"
                                  ColumnSpacing="8"
                                  Margin="0,10,0,0">
                                <CheckBox IsChecked="{Binding IsMarked}"
                                          Color="{DynamicResource Accent}"
                                          VerticalOptions="Start"
                                          Margin="0"
                                          Grid.RowSpan="2" />
                                <VerticalStackLayout Grid.Column="1"
                                                     Spacing="4"
                                                     HorizontalOptions="End">
                                    <Button Text="{Binding PeopleTagActionLabel}"
                                            FontSize="11"
                                            Padding="10,2"
                                            BackgroundColor="{DynamicResource Surface2}"
                                            TextColor="{DynamicResource OnSurfaceMuted}"
                                            Clicked="OnTagPeopleClicked"
                                            CommandParameter="{Binding .}" />
                                    <Button Text="{x:Static strings:AppResources.OpenFolderAction}"
                                            FontSize="11"
                                            Padding="10,2"
                                            BackgroundColor="{DynamicResource Surface2}"
                                            TextColor="{DynamicResource OnSurfaceMuted}"
                                            Clicked="OnOpenFolderClicked"
                                            CommandParameter="{Binding .}" />
                                </VerticalStackLayout>
                            </Grid>

                            <HorizontalStackLayout Grid.Row="2"
                                                   Spacing="6"
                                                   Margin="0,6,0,2">
                                <Frame BackgroundColor="{DynamicResource Surface2}"
                                       BorderColor="{DynamicResource BorderSubtle}"
                                       CornerRadius="8"
                                       Padding="8,4"
                                       HorizontalOptions="Start"
                                       IsVisible="{Binding HasDuration}">
                                    <HorizontalStackLayout Spacing="6">
                                        <Image Source="chip_clock.svg"
                                               HeightRequest="12"
                                               WidthRequest="12" />
                                        <Label Text="{Binding DurationText}"
                                               TextColor="{DynamicResource OnSurfaceMuted}"
                                               FontSize="11" />
                                    </HorizontalStackLayout>
                                </Frame>
                                <Frame BackgroundColor="{DynamicResource Surface2}"
                                       BorderColor="{DynamicResource BorderSubtle}"
                                       CornerRadius="8"
                                       Padding="8,4"
                                       HorizontalOptions="Start">
                                    <HorizontalStackLayout Spacing="6">
                                        <Image Source="chip_collection.svg"
                                               HeightRequest="12"
                                               WidthRequest="12" />
                                        <Label
                                            Text="{Binding MediaType, Converter={StaticResource MediaTypeLabelConverter}}"
                                            TextColor="{DynamicResource OnSurfaceMuted}"
                                            FontSize="11" />
                                    </HorizontalStackLayout>
                                </Frame>
                            </HorizontalStackLayout>

                            <VerticalStackLayout Grid.Row="3"
                                                 Spacing="4"
                                                 Margin="0,2,0,2">
                                <Label Text="{Binding Name}"
                                       TextColor="{DynamicResource OnSurface}"
                                       FontSize="12"
                                       LineBreakMode="NoWrap"
                                       MaxLines="1" />
                                <Label Text="{Binding DateAddedText}"
                                       TextColor="{DynamicResource OnSurfaceMuted}"
                                       FontSize="10"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="1"
                                       IsVisible="{Binding HasDateAdded}" />
                                <HorizontalStackLayout Spacing="4"
                                                       BindableLayout.ItemsSource="{Binding PeopleTags}"
                                                       IsVisible="{Binding HasPeopleTags}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Frame BackgroundColor="{DynamicResource Surface3}"
                                                   BorderColor="{DynamicResource BorderSubtle}"
                                                   CornerRadius="10"
                                                   Padding="6,2"
                                                   HasShadow="False">
                                                <Label Text="{Binding .}"
                                                       TextColor="{DynamicResource OnSurface}"
                                                       Opacity="0.75"
                                                       FontSize="10"
                                                       LineBreakMode="TailTruncation"
                                                       MaxLines="1"
                                                       VerticalOptions="Center" />
                                            </Frame>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
