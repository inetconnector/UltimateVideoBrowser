<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             xmlns:models="clr-namespace:UltimateVideoBrowser.Models"
             x:Class="UltimateVideoBrowser.Views.PersonPage"
             BackgroundColor="{DynamicResource AppBg}"
             Title="{x:Static strings:AppResources.PersonPageTitle}">

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="{OnPlatform Android='12,32,12,12', iOS='12,24,12,12', Default='12'}"
          RowSpacing="12">

        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
            <Button Text="{x:Static strings:AppResources.BackButton}"
                    Clicked="OnBackClicked" />

            <Label Grid.Column="1"
                   Text="{Binding Name}"
                   TextColor="{DynamicResource OnSurface}"
                   FontAttributes="Bold"
                   FontSize="16"
                   VerticalTextAlignment="Center" />

            <Grid Grid.Column="2" ColumnDefinitions="Auto,Auto" ColumnSpacing="10"
                  VerticalOptions="Center">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   WidthRequest="16"
                                   HeightRequest="16" />
                <Button Grid.Column="1"
                        Text="{x:Static strings:AppResources.SaveButton}"
                        Command="{Binding SaveNameCommand}" />
            </Grid>
        </Grid>

        <Frame Grid.Row="1"
               BackgroundColor="{DynamicResource Surface}"
               CornerRadius="12"
               HasShadow="False"
               Padding="12">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <Entry Text="{Binding Name}"
                       Placeholder="{x:Static strings:AppResources.PersonNamePlaceholder}"
                       TextColor="{DynamicResource OnSurface}"
                       PlaceholderColor="{DynamicResource OnSurfaceMuted}" />
                <Button Grid.Column="1"
                        Text="{x:Static strings:AppResources.RenameAction}"
                        Command="{Binding SaveNameCommand}" />
            </Grid>
        </Frame>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Photos}"
                        SelectionMode="Single"
                        SelectionChanged="OnPhotoSelected"
                        ItemSizingStrategy="MeasureFirstItem"
                        ItemsUpdatingScrollMode="KeepScrollOffset">
            <CollectionView.EmptyView>
                <Grid Padding="20" RowDefinitions="Auto,Auto" RowSpacing="10">
                    <Image Source="empty_state.svg" HeightRequest="110" />
                    <Label Grid.Row="1"
                           Text="{x:Static strings:AppResources.PersonEmptyHint}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="12"
                           HorizontalTextAlignment="Center" />
                </Grid>
            </CollectionView.EmptyView>

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="3" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MediaItem">
                    <Frame BackgroundColor="{DynamicResource Surface}"
                           CornerRadius="12"
                           HasShadow="False"
                           Padding="0"
                           Margin="0,0,0,10">
                        <Grid>
                            <Image
                                Source="{Binding ThumbnailPath, Converter={StaticResource StringFallbackConverter}, ConverterParameter=video_placeholder.svg}"
                                Aspect="AspectFill"
                                HeightRequest="110" />

                            <Frame BackgroundColor="#CC0E0F14"
                                   CornerRadius="10"
                                   Padding="6,2"
                                   HorizontalOptions="End"
                                   VerticalOptions="Start"
                                   Margin="6">
                                <Label Text="{x:Static strings:AppResources.TagPeopleAction}"
                                       FontSize="10"
                                       TextColor="White" />
                            </Frame>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>