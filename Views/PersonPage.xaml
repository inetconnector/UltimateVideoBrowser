<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             xmlns:models="clr-namespace:UltimateVideoBrowser.Models"
             xmlns:components="clr-namespace:UltimateVideoBrowser.Views.Components"
             x:Class="UltimateVideoBrowser.Views.PersonPage"
             BackgroundColor="{DynamicResource AppBg}"
             Title="{x:Static strings:AppResources.PersonPageTitle}">

    <Grid RowDefinitions="Auto,Auto,Auto,*"
          Padding="{OnPlatform Android='12,32,12,12', iOS='12,24,12,12', Default='12'}"
          RowSpacing="12">

        <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
            <Button Text="{x:Static strings:AppResources.BackButton}"
                    Clicked="OnBackClicked" />

            <Label Grid.Column="1"
                   Text="{Binding Name}"
                   TextColor="{DynamicResource OnSurface}"
                   FontAttributes="Bold"
                   FontSize="16"
                   VerticalTextAlignment="Center" />

            <Grid Grid.Column="2" ColumnDefinitions="Auto,Auto" ColumnSpacing="10"
                  VerticalOptions="Center">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   WidthRequest="16"
                                   HeightRequest="16" />
                <Button Grid.Column="1"
                        Text="{x:Static strings:AppResources.SaveButton}"
                        Command="{Binding SaveNameCommand}" />
                <Button Grid.Column="2"
                        Text="{x:Static strings:AppResources.MergeButton}"
                        Clicked="OnMergeClicked" />
            </Grid>
        </Grid>

        <Frame Grid.Row="1"
               BackgroundColor="{DynamicResource Surface}"
               CornerRadius="12"
               HasShadow="False"
               Padding="12">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="12">
                <Entry Text="{Binding Name}"
                       Placeholder="{x:Static strings:AppResources.PersonNamePlaceholder}"
                       TextColor="{DynamicResource OnSurface}"
                       PlaceholderColor="{DynamicResource OnSurfaceMuted}" />
                <Label Grid.Column="1"
                       Text="{x:Static strings:AppResources.QualityLabel}"
                       FontSize="12"
                       TextColor="{DynamicResource OnSurfaceMuted}" />
                <Label Grid.Column="2"
                       Text="{Binding QualityScore, StringFormat='{0:0.00}'}"
                       FontSize="12"
                       TextColor="{DynamicResource OnSurfaceMuted}" />
                <Button Grid.Column="3"
                        Text="{x:Static strings:AppResources.RenameAction}"
                        Command="{Binding SaveNameCommand}" />
            </Grid>
        </Frame>

        <Frame Grid.Row="2"
               BackgroundColor="{DynamicResource Surface}"
               CornerRadius="12"
               HasShadow="False"
               Padding="12">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <VerticalStackLayout Spacing="4">
                    <Label Text="{x:Static strings:AppResources.IgnorePersonTitle}"
                           TextColor="{DynamicResource OnSurface}"
                           FontAttributes="Bold"
                           FontSize="13" />
                    <Label Text="{x:Static strings:AppResources.IgnorePersonDescription}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="11" />
                    <Label Text="{x:Static strings:AppResources.IgnoredPersonBadge}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="11"
                           IsVisible="{Binding IsIgnored}" />
                </VerticalStackLayout>
                <Button Grid.Column="1"
                        Text="{Binding IgnoreActionText}"
                        Command="{Binding ToggleIgnoreCommand}" />
            </Grid>
        </Frame>

        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding Photos}"
                        SelectionMode="Single"
                        SelectionChanged="OnPhotoSelected"
                        ItemSizingStrategy="MeasureFirstItem"
                        ItemsUpdatingScrollMode="KeepScrollOffset">
            <CollectionView.EmptyView>
                <Grid Padding="20" RowDefinitions="Auto,Auto" RowSpacing="10">
                    <Image Source="empty_state.svg" HeightRequest="110" />
                    <Label Grid.Row="1"
                           Text="{x:Static strings:AppResources.PersonEmptyHint}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="12"
                           HorizontalTextAlignment="Center" />
                </Grid>
            </CollectionView.EmptyView>

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="3" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MediaItem">
                    <Frame BackgroundColor="{DynamicResource Surface}"
                           CornerRadius="12"
                           HasShadow="False"
                           Padding="10"
                           Margin="0,0,0,10">
                        <Grid RowDefinitions="110,Auto"
                              RowSpacing="8">
                            <components:MediaItemPreviewView HeightRequest="110"
                                                             BindingContext="{Binding .}" />
                            <VerticalStackLayout Grid.Row="1"
                                                 Spacing="6"
                                                 HorizontalOptions="End">
                                <Button Text="{x:Static strings:AppResources.TagPeopleAction}"
                                        FontSize="11"
                                        Padding="10,2"
                                        BackgroundColor="{DynamicResource Surface2}"
                                        TextColor="{DynamicResource OnSurfaceMuted}"
                                        Clicked="OnTagPeopleClicked"
                                        CommandParameter="{Binding .}" />
                                <Button Text="{x:Static strings:AppResources.OpenFolderAction}"
                                        FontSize="11"
                                        Padding="10,2"
                                        BackgroundColor="{DynamicResource Surface2}"
                                        TextColor="{DynamicResource OnSurfaceMuted}"
                                        Clicked="OnOpenFolderClicked"
                                        CommandParameter="{Binding .}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>