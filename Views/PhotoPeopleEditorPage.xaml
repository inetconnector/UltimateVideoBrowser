<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:UltimateVideoBrowser.Resources.Strings"
             xmlns:vm="clr-namespace:UltimateVideoBrowser.ViewModels"
             x:Class="UltimateVideoBrowser.Views.PhotoPeopleEditorPage"
             BackgroundColor="{DynamicResource AppBg}"
             Title="{x:Static strings:AppResources.TagPeopleEditorTitle}">

    <Grid RowDefinitions="Auto,Auto,Auto,*"
          Padding="{OnPlatform Android='12,32,12,12', iOS='12,24,12,12', Default='12'}"
          RowSpacing="12">

        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
            <Button Text="{x:Static strings:AppResources.BackButton}"
                    Clicked="OnBackClicked" />

            <Label Grid.Column="1"
                   Text="{x:Static strings:AppResources.TagPeopleEditorHeader}"
                   TextColor="{DynamicResource OnSurface}"
                   FontAttributes="Bold"
                   FontSize="16"
                   VerticalTextAlignment="Center" />

            <Grid Grid.Column="2" ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="10"
                  VerticalOptions="Center">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   WidthRequest="16"
                                   HeightRequest="16" />
                <Button Grid.Column="1"
                        Text="{x:Static strings:AppResources.OpenButton}"
                        Clicked="OnOpenClicked" />
                <Button Grid.Column="2"
                        Text="{x:Static strings:AppResources.SaveButton}"
                        Clicked="OnSaveClicked" />
            </Grid>
        </Grid>

        <Frame Grid.Row="1"
               BackgroundColor="{DynamicResource Surface}"
               CornerRadius="12"
               HasShadow="False"
               Padding="10">
            <Image Source="{Binding MediaPath}"
                   Aspect="AspectFit"
                   HeightRequest="240" />
        </Frame>

        <Frame Grid.Row="2"
               BackgroundColor="{DynamicResource Surface}"
               CornerRadius="12"
               HasShadow="False"
               Padding="12">
            <VerticalStackLayout Spacing="6">
                <Label Text="{x:Static strings:AppResources.TagPeopleEditorTagsLabel}"
                       TextColor="{DynamicResource OnSurfaceMuted}"
                       FontSize="12" />
                <Entry Text="{Binding PeopleTagsText}"
                       Placeholder="{x:Static strings:AppResources.TagPeopleEditorTagsPlaceholder}"
                       TextColor="{DynamicResource OnSurface}"
                       PlaceholderColor="{DynamicResource OnSurfaceMuted}" />
                <Label Text="{x:Static strings:AppResources.TagPeopleEditorTagsHint}"
                       TextColor="{DynamicResource OnSurfaceMuted}"
                       FontSize="10" />
            </VerticalStackLayout>
        </Frame>

        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding Faces}"
                        SelectionMode="None">
            <CollectionView.EmptyView>
                <Grid Padding="20" RowDefinitions="Auto,Auto" RowSpacing="10">
                    <Image Source="empty_state.svg" HeightRequest="110" />
                    <Label Grid.Row="1"
                           Text="{x:Static strings:AppResources.TagPeopleEditorEmptyHint}"
                           TextColor="{DynamicResource OnSurfaceMuted}"
                           FontSize="12"
                           HorizontalTextAlignment="Center" />
                </Grid>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:FaceTagItemViewModel">
                    <Frame BackgroundColor="{DynamicResource Surface}"
                           CornerRadius="14"
                           HasShadow="False"
                           Padding="12"
                           Margin="0,0,0,10">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Frame BackgroundColor="{DynamicResource Surface2}"
                                   CornerRadius="999"
                                   WidthRequest="56"
                                   HeightRequest="56"
                                   Padding="0"
                                   HasShadow="False">
                                <Image
                                    Source="{Binding ThumbnailPath, Converter={StaticResource StringFallbackConverter}, ConverterParameter=person_placeholder.svg}"
                                    Aspect="AspectFill" />
                            </Frame>

                            <VerticalStackLayout Grid.Column="1" Spacing="6">
                                <Label Text="{Binding FaceIndex, StringFormat='Face {0}'}"
                                       TextColor="{DynamicResource OnSurfaceMuted}"
                                       FontSize="10" />
                                <Entry Text="{Binding Name}"
                                       Placeholder="{x:Static strings:AppResources.PersonNamePlaceholder}"
                                       TextColor="{DynamicResource OnSurface}"
                                       PlaceholderColor="{DynamicResource OnSurfaceMuted}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>